{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "A brief description",
    "action": {
      "default_popup": "dist/index.html" 
    },
    "permissions": ["activeTab"],
    
    "web_accessible_resources": [
      {
        "resources": [
          "dist/*" 
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  